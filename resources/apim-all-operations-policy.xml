<policies>
  <inbound>
    <!--CORSチェック-->
    <cors>
      <allowed-origins>
        <origin>http://localhost:3000</origin>
        <origin>https://qatranslator-je-appservice.azurewebsites.net</origin>
      </allowed-origins>
      <allowed-methods>
        <method>GET</method>
      </allowed-methods>
      <allowed-headers>
        <header>X-Access-Token</header>
      </allowed-headers>
    </cors>
    <!--下記URLに基づいたJWTトークンチェック-->
    <!--https://docs.microsoft.com/ja-jp/azure/active-directory/develop/access-tokens-->
    <validate-jwt header-name="X-Access-Token" require-scheme="Bearer">
      <!--トークンの署名は妥当か-->
      <openid-config url="https://login.microsoftonline.com/5643642c-bd8c-48aa-a0f1-3341988ddc8a/.well-known/openid-configuration" />
      <!--Microsoft IDプラットフォームのクライアント(アプリケーション)が妥当か-->
      <audiences>
        <audience>c9105b75-b3a8-4c45-a0e7-5c60837f29cc</audience>
      </audiences>
      <!--Microsoft IDプラットフォームのテナント(ディレクトリ)が妥当か-->
      <issuers>
        <issuer>https://login.microsoftonline.com/5643642c-bd8c-48aa-a0f1-3341988ddc8a/v2.0</issuer>
      </issuers>
      <!--上記クライアント(アプリケーション)のAPIのスコープが妥当か-->
      <required-claims>
        <claim name="scp" match="all">
          <value>access_as_user</value>
        </claim>
      </required-claims>
    </validate-jwt>
    <!--上位スコープのinboundのポリシー適用-->
    <base />
    <!--バックエンド設定-->
    <set-backend-service id="backends-functions-policy" backend-id="backends-functions" />
  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>
